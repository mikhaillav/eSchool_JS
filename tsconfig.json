{
    "compileOnSave": true,
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "lib": ["ESNext"],
      "declaration": true,
      "declarationDir": "./types",
      "outDir": "lib",
      "strict": true,
      "moduleResolution": "Bundler",
      "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "lib", "types", "test"]
}